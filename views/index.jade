html(ng-app='quoApp')
  head
    title='Quotes'
    link(rel='stylesheet', href='http://netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css')
    link(rel='javascript', href='https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0/angular.min.js')
  body
    div.container
      div.jumbotron
        h1 Quotes
        ul
          each item in quotes
            li
              p "#{item.quote}" - #{item.source}
